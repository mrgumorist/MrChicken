<Page x:Class="Mr.Chicken.AdminPages.PromotionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mr.Chicken.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PromotionPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="39"/>
            <RowDefinition/>
            <RowDefinition Height="75.2"/>
        </Grid.RowDefinitions>
        <Label Foreground="White" FontWeight="Bold" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" >PROMOTIONS MENU</Label>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Background="{x:Null}" Foreground="White" FontSize="40">Start Promotion</Button>
            <Button Grid.Column="1" Background="{x:Null}" Foreground="White" FontSize="40">Exit</Button>
          
        </Grid>
        <DataGrid Background="{x:Null}" Grid.Row="1" >
            
        </DataGrid>
    </Grid>
</Page>
